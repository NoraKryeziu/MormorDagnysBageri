SELECT
  Recipes.Id AS RecipeId,
  Products.Name AS Name,
  Ingredients.Name AS Ingredients,
  Quantity AS kg
FROM RecipeIngredients INNER JOIN Recipes
  ON Recipes.Id = RecipeIngredients.RecipeId INNER JOIN Products
  ON Products.Id = Recipes.ProductId INNER JOIN Ingredients
  ON Ingredients.Id = RecipeIngredients.IngredientId
WHERE Recipes.Id = 1;

